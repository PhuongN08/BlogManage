@page
@model BMFE.Pages.BlogManage.LoginModel
@{
    ViewData["Title"] = "Đăng Nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
</head>
<body>

    <h2>Đăng Nhập</h2>

    <form method="post" class="form-container">
        <div class="form-group">
            <label>Tên đăng nhập:</label>
            <input asp-for="Login.Username" required />
        </div>
        <div class="form-group">
            <label>Mật khẩu:</label>
            <input asp-for="Login.Password" type="password" required />
        </div>
        <button type="submit" class="submit-button">Đăng Nhập</button>

        @if (Model.ErrorMessage != null)
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
    </form>


    <div class="register-link">
        <a href="/BlogManage/Register">Chưa có tài khoản? Đăng ký ngay!</a> 
    </div>

</body>
</html>