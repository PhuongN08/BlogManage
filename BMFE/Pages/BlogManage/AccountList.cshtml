@page
@model BMFE.Pages.Admin.AccountListModel
@{
    ViewData["Title"] = "Danh sách tài khoản";
}

<h2>Danh sách tài khoản</h2>

<form method="get" class="mb-3">
    <input type="text" name="Search" value="@Model.Search" placeholder="Tìm kiếm tài khoản hoặc tên..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Tìm kiếm</button>
</form>

@if (!Model.Accounts.Any())
{
    <p>Không có tài khoản nào.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Ngày cập nhật</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var acc in Model.Accounts)
            {
                <tr>
                    <td>@acc.Username</td>
                    <td>@acc.Name</td>
                    <td>@acc.Email</td>
                    <td>@acc.Role</td>
                    <td>@(acc.Status ? "Hoạt động" : "Không hoạt động")</td>
                    <td>@acc.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>@(acc.UpdatedDate.HasValue? acc.UpdatedDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                </tr>
            }
        </tbody>
    </table>
}
